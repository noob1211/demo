<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobileappscompany"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="11" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="label"
        android:targetPackage="com.mobileappscompany" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_action"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.mobileappscompany.application.productapp.android.views.impl.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobileappscompany.application.productapp.android.views.impl.CreateProductActivity"
            android:label="@string/create_product"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.mobileappscompany.application.productapp.android.views.impl.ProductDetailsActivity"
            android:label="@string/title_activity_product_details" >
        </activity>
        <activity
            android:name="com.mobileappscompany.application.productapp.android.views.impl.ModifyProductActivity"
            android:label="@string/title_activity_modify_product" >
        </activity>
    </application>

</manifest>